<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <RecipeDef Name="RC2_CookMealBase" Abstract="True">
    <fixedIngredientFilter>
      <categories>
        <li>FoodRaw</li>
        <li>RC2_FoodProcessed</li>
      </categories>
      <disallowedThingDefs>
        <li>RC2_RawWheat</li>
      </disallowedThingDefs>
      <specialFiltersToDisallow>
        <li>AllowPlantFood</li>
      </specialFiltersToDisallow>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>FoodRaw</li>
        <li>RC2_FoodProcessed</li>
      </categories>
      <disallowedCategories>
        <li>EggsFertilized</li>
      </disallowedCategories>
      <disallowedThingDefs>
        <li>Meat_Human</li>
        <li>Meat_Megaspider</li>
        <li>InsectJelly</li>
        <li>RC2_RawSoybean</li>
      </disallowedThingDefs>
    </defaultIngredientFilter>
    <workSkill>Cooking</workSkill>
  </RecipeDef>
  <RecipeDef Name="RC2_CookThinPottage" ParentName="RC2_CookMealBase">
    <defName>CookThinPottage</defName>
    <label>cook thin pottage (5)</label>
    <description>Cooks a bland, thin pottage out of some ingredients.  Makes 5 meals.</description>
    <jobString>Cooking thin pottage.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <requiredGiverWorkType>Cooking</requiredGiverWorkType>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>True</allowMixingIngredients>
    <workAmount>900</workAmount>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <recipeUsers>
      <li>ElectricStove</li>
      <li>FueledStove</li>
      <li>Campfire</li>
    </recipeUsers>
    <fixedIngredientFilter>
      <disallowedCategories>
        <li>RC2_SweetsRaw</li>
        <li>RC2_SweetsProcessed</li>
      </disallowedCategories>
    </fixedIngredientFilter>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>MeatRaw</li>
            <li>RC2_GrainsRaw</li>
            <li>RC2_VegetablesRaw</li>
            <li>RC2_FruitsRaw</li>
            <li>RC2_MeatProcessed</li>
            <li>RC2_GrainsProcessed</li>
            <li>RC2_VegetablesProcessed</li>
            <li>RC2_FruitProcessed</li>
            <li>RC2_AnimalProductProcessed</li>
            <li>AnimalProductRaw</li>
          </categories>
        </filter>
        <count>2.5</count>
      </li>
    </ingredients>
    <products>
      <RC2_ThinPottage>5</RC2_ThinPottage>
    </products>
    <workSkill>Cooking</workSkill>
    <researchPrerequisite>RC2_BasicCooking</researchPrerequisite>
  </RecipeDef>
  <RecipeDef ParentName="RC2_CookMealBase">
    <defName>RC2_CookThickPottage</defName>
    <label>cook thick pottage (5)</label>
    <description>Cooks a thick pottage out of meat and any kind of plant food.  Makes 5 meals.</description>
    <jobString>Cooking thick pottage.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>True</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <workAmount>1350</workAmount>
    <recipeUsers>
      <li>ElectricStove</li>
      <li>FueledStove</li>
      <li>Campfire</li>
    </recipeUsers>
    <fixedIngredientFilter>
      <disallowedCategories>
        <li>RC2_SweetsRaw</li>
        <li>RC2_SweetsProcessed</li>
      </disallowedCategories>
    </fixedIngredientFilter>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>MeatRaw</li>
            <li>RC2_MeatProcessed</li>
            <li>RC2_AnimalProductProcessed</li>
            <li>AnimalProductRaw</li>
          </categories>
        </filter>
        <count>1.25</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>RC2_VegetablesRaw</li>
            <li>RC2_VegetablesProcessed</li>
            <li>RC2_FruitsRaw</li>
            <li>RC2_FruitProcessed</li>
            <li>RC2_GrainsRaw</li>
            <li>RC2_GrainsProcessed</li>
          </categories>
        </filter>
        <count>1.25</count>
      </li>
    </ingredients>
    <products>
      <RC2_ThickPottage>5</RC2_ThickPottage>
    </products>
    <skillRequirements>
      <Cooking>8</Cooking>
    </skillRequirements>
    <researchPrerequisite>RC2_BasicCooking</researchPrerequisite>
  </RecipeDef>
  <RecipeDef Name="RC2_MakeHardtack">
    <defName>RC2_MakeHardtack</defName>
    <label>make hardtack</label>
    <description>Make hardtack, a tough biscuit or cracker that lasts for years and fills you up.  Doesn't taste too great though. Makes 14.</description>
    <jobString>Making hardtack.</jobString>
    <workAmount>500</workAmount>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <requiredGiverWorkType>Cooking</requiredGiverWorkType>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <recipeUsers>
      <li>ElectricStove</li>
      <li>FueledStove</li>
      <li>Campfire</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>RC2_GrainsProcessed</li>
          </categories>
        </filter>
        <count>0.5</count>
      </li>
    </ingredients>
    <products>
      <RC2_Hardtack>14</RC2_Hardtack>
    </products>
    <fixedIngredientFilter>
      <categories>
        <li>RC2_GrainsProcessed</li>
      </categories>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>RC2_GrainsProcessed</li>
      </categories>
    </defaultIngredientFilter>
    <workSkill>Cooking</workSkill>
    <researchPrerequisite>Pemmican</researchPrerequisite>
  </RecipeDef>
