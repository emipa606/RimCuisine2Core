<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <RecipeDef ParentName="RC2_CookJoyMealBase">
    <defName>RC2_MakeCandy</defName>
    <label>make candy</label>
    <description>Uses sweets to make delicious, delicious candy.  Makes 10.</description>
    <jobString>Making candy.</jobString>
    <recipeUsers>
      <li>ElectricStove</li>
      <li>FueledStove</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>RC2_SweetsRaw</li>
            <li>RC2_SweetsProcessed</li>
          </categories>
          <thingDefs>
            <li>Chocolate</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <RC2_MealCandy>10</RC2_MealCandy>
    </products>
    <fixedIngredientFilter>
      <categories>
        <li>RC2_SweetsRaw</li>
        <li>RC2_SweetsProcessed</li>
      </categories>
      <thingDefs>
        <li>Chocolate</li>
      </thingDefs>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>RC2_SweetsRaw</li>
        <li>RC2_SweetsProcessed</li>
      </categories>
      <thingDefs>
        <li>Chocolate</li>
      </thingDefs>
    </defaultIngredientFilter>
    <skillRequirements>
      <Cooking>2</Cooking>
    </skillRequirements>
    <researchPrerequisite>RC2_BasicCooking</researchPrerequisite>
  </RecipeDef>
