<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef>
    <defName>RC2_CaffeineTea</defName>
    <label>caffeine buzz from tea</label>
    <labelNoun>a tea buzz</labelNoun>
    <maxSeverity>1</maxSeverity>
    <hediffClass>HediffWithComps</hediffClass>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-2.0</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <minSeverity>.01</minSeverity>
        <label>perked up</label>
        <painFactor>1.00</painFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.05</offset>
          </li>
        </capMods>
        <statOffsets>
          <WorkSpeedGlobal>0.05</WorkSpeedGlobal>
          <GlobalLearningFactor>0.10</GlobalLearningFactor>
          <RestRateMultiplier>-0.05</RestRateMultiplier>
          <HungerRateMultiplier>-0.05</HungerRateMultiplier>
        </statOffsets>
      </li>
      <li>
        <minSeverity>.26</minSeverity>
        <label>wired</label>
        <painFactor>1.0</painFactor>
        <restFallFactor>0.9</restFallFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.1</offset>
          </li>
        </capMods>
        <statOffsets>
          <WorkSpeedGlobal>0.075</WorkSpeedGlobal>
          <GlobalLearningFactor>0.2</GlobalLearningFactor>
          <MentalBreakThreshold>0.02</MentalBreakThreshold>
          <RestRateMultiplier>-0.05</RestRateMultiplier>
          <HungerRateMultiplier>-0.10</HungerRateMultiplier>
        </statOffsets>
      </li>
      <li>
        <minSeverity>.51</minSeverity>
        <label>jittery</label>
        <painFactor>1.1</painFactor>
        <restFallFactor>0.9</restFallFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.15</offset>
          </li>
        </capMods>
        <statOffsets>
          <WorkSpeedGlobal>-0.05</WorkSpeedGlobal>
          <GlobalLearningFactor>0.3</GlobalLearningFactor>
          <MentalBreakThreshold>0.04</MentalBreakThreshold>
          <RestRateMultiplier>-0.1</RestRateMultiplier>
          <HungerRateMultiplier>-0.10</HungerRateMultiplier>
          <PsychicSensitivity>0.1</PsychicSensitivity>
        </statOffsets>
        <hediffGivers>
          <li Class="HediffGiver_Random">
            <hediff>HeartAttack</hediff>
            <mtbDays>360</mtbDays>
            <partsToAffect>
              <li>Heart</li>
            </partsToAffect>
          </li>
        </hediffGivers>
      </li>
      <li>
        <minSeverity>.76</minSeverity>
        <label>shaky</label>
        <vomitMtbDays>1</vomitMtbDays>
        <painFactor>1.15</painFactor>
        <restFallFactor>0.9</restFallFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.15</offset>
          </li>
        </capMods>
        <statOffsets>
          <WorkSpeedGlobal>-0.10</WorkSpeedGlobal>
          <GlobalLearningFactor>0.3</GlobalLearningFactor>
          <MentalBreakThreshold>0.06</MentalBreakThreshold>
          <RestRateMultiplier>-0.25</RestRateMultiplier>
          <HungerRateMultiplier>-0.10</HungerRateMultiplier>
          <PsychicSensitivity>0.2</PsychicSensitivity>
        </statOffsets>
        <hediffGivers>
          <li Class="HediffGiver_Random">
            <hediff>HeartAttack</hediff>
            <mtbDays>240</mtbDays>
            <partsToAffect>
              <li>Heart</li>
            </partsToAffect>
          </li>
        </hediffGivers>
      </li>
    </stages>
  </HediffDef>
  <ThoughtDef>
    <defName>RC2_CaffeineHighTea</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>RC2_CaffeineTea</hediff>
    <stages>
      <li>
        <label>perked up</label>
        <description>Caffeine is the best pick-me-up!</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
      <li>
        <label>wired</label>
        <description>What a rush!</description>
        <baseMoodEffect>7</baseMoodEffect>
      </li>
      <li>
        <label>jittery</label>
        <description>That was too much caffeine. My hands are starting to shake.</description>
        <baseMoodEffect>-1</baseMoodEffect>
      </li>
      <li>
        <label>shaky</label>
        <description>Palms are sweaty, knees weak, arms are heavy, mom's spaghetti!</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</Defs>
